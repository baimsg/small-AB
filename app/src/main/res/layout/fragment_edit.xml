<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <View
        android:id="@+id/vHeader"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/cancel"
        android:textColor="@color/subtitle_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:text="@string/save"
        android:textColor="@color/color_primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/vHeader"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/header"
        android:src="@drawable/ic_contacts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vHeader" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:autofillHints="name"
        android:background="@drawable/shape_edit_default"
        android:hint="@string/name_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="1"
        android:paddingHorizontal="38dp"
        android:paddingVertical="16dp"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivHeader" />

    <ImageView
        android:id="@+id/ivClearName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/clear"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/editName"
        app:layout_constraintEnd_toEndOf="@id/editName"
        app:layout_constraintTop_toTopOf="@id/editName" />

    <View
        android:id="@+id/vLineName"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editName" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:background="@drawable/shape_edit_default"
        android:hint="@string/number_hint"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLines="1"
        android:paddingHorizontal="38dp"
        android:paddingVertical="16dp"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLineName" />

    <ImageView
        android:id="@+id/ivClearNumber"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/clear"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/editNumber"
        app:layout_constraintEnd_toEndOf="@id/editNumber"
        app:layout_constraintTop_toTopOf="@id/editNumber" />

    <View
        android:id="@+id/vLineNumber"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editNumber" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:background="@drawable/shape_edit_default"
        android:hint="@string/email_hint"
        android:imeOptions="actionNext"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingHorizontal="38dp"
        android:paddingVertical="16dp"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLineNumber" />

    <ImageView
        android:id="@+id/ivClearEmail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/clear"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/editEmail"
        app:layout_constraintEnd_toEndOf="@id/editEmail"
        app:layout_constraintTop_toTopOf="@id/editEmail" />

    <View
        android:id="@+id/vLineEmail"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editEmail" />

    <EditText
        android:id="@+id/editAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:background="@drawable/shape_edit_default"
        android:hint="@string/address_hint"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:maxLines="2"
        android:paddingHorizontal="38dp"
        android:paddingVertical="16dp"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLineEmail" />

    <ImageView
        android:id="@+id/ivClearAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/clear"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/editAddress"
        app:layout_constraintEnd_toEndOf="@id/editAddress"
        app:layout_constraintTop_toTopOf="@id/editAddress" />

    <View
        android:id="@+id/vLineAddress"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/line_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editAddress" />

    <EditText
        android:id="@+id/editDescribe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="name"
        android:background="@drawable/shape_edit_default"
        android:hint="@string/describe_hint"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="4"
        android:paddingHorizontal="38dp"
        android:paddingVertical="16dp"
        android:textColor="@color/title_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vLineAddress" />

    <ImageView
        android:id="@+id/ivClearDescribe"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:contentDescription="@string/clear"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:src="@drawable/ic_clear"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/editDescribe"
        app:layout_constraintEnd_toEndOf="@id/editAddress"
        app:layout_constraintTop_toTopOf="@id/editDescribe" />


</androidx.constraintlayout.widget.ConstraintLayout>